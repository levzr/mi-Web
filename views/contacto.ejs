<%- include('parcial/header') %>

<section>
  <h2 style="color:#ffffff;font-size:2em;margin-bottom:1.2em;">Contacto</h2>
  <form action="/api/contactos" method="POST" style="display:flex;flex-direction:column;gap:18px;">
    <input name="nombre" required placeholder="Nombre completo" class="input" style="padding:12px;border-radius:6px;border:1px solid #ccc;background:#222b3a;color:#fff;" />
    <input name="email" type="email" placeholder="Correo electrónico" class="input" style="padding:12px;border-radius:6px;border:1px solid #ccc;background:#222b3a;color:#fff;" />
    <input name="telefono" placeholder="Teléfono" class="input" style="padding:12px;border-radius:6px;border:1px solid #ccc;background:#222b3a;color:#fff;" />
    <textarea name="mensaje" required placeholder="Mensaje" class="input" style="padding:12px;border-radius:6px;min-height:90px;border:1px solid #ccc;background:#222b3a;color:#fff;"></textarea>
    <button type="submit" class="btn-primary" style="padding:12px;border-radius:6px;background:#1abc9c;color:#fff;font-weight:600;font-size:1.1em;border:none;cursor:pointer;">Enviar</button>
  </form>
</section>

<%- include('parcial/footer') %>
