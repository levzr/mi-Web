<%- include('parcial/header') %>

<div class="container">
  <h2 class="section-title"><%= restaurante.nombre %></h2>

  <div class="restaurante-detalle">
    <img src="<%= restaurante.imagen %>" alt="<%= restaurante.nombre %>" class="restaurante-banner">
    <p><strong>Categoría:</strong> <%= restaurante.categoria %></p>
    <p><strong>Valoración:</strong> ⭐ <%= restaurante.rating %> / 5</p>
    <p><strong>Tiempo estimado:</strong> <%= restaurante.tiempo %></p>
  </div>

  <h3 class="section-subtitle">Menú</h3>
  <div class="grid">
    <% restaurante.platos.forEach(plato => { %>
      <div class="card">
        <div class="card-media">
          <img src="<%= plato.imagen %>" alt="<%= plato.nombre %>">
        </div>
        <div class="card-body">
          <h4><%= plato.nombre %></h4>
          <p><%= plato.descripcion %></p>
          <p><strong>L. <%= plato.precio %></strong></p>
          <a href="/checkout?restaurante=<%= restaurante.id %>&plato=<%= encodeURIComponent(plato.nombre) %>&precio=<%= plato.precio %>" class="btn-primary">
            Pedir ahora
          </a>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include('parcial/footer') %>

