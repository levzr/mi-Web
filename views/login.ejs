<%- include('parcial/header', { siteName: siteName }) %>

<section class="container" style="max-width:400px;margin:auto;">
  <h2 style="color:#ffffff;">Iniciar sesión</h2>

  <% if (typeof error !== 'undefined' && error) { %>
    <p style="color:#f97373;margin:8px 0 14px;"><%= error %></p>
  <% } %>

  <form action="/api/login" method="POST" style="display:flex;flex-direction:column;gap:15px;">
    <label for="email" style="color:#ffffff;">Email</label>
    <input
      type="email"
      name="email"
      id="email"
      required
      class="input"
      style="padding:12px;border:1px solid #ced6e0;border-radius:5px;"
    >

    <label for="password" style="color:#ffffff;">Contraseña</label>
    <input
      type="password"
      name="password"
      id="password"
      required
      minlength="6"
      class="input"
      style="padding:12px;border:1px solid #ced6e0;border-radius:5px;"
    >

    <button
      type="submit"
      class="btn-primary"
      style="margin-top:12px;background:#1abc9c;color:#222d3b;border:none;padding:18px 0;font-size:1.2em;border-radius:5px;cursor:pointer;font-weight:600;width:100%;"
    >
      Entrar
    </button>
  </form>

  <p style="margin-top:10px;color:hsl(0, 0%, 97%);">
    ¿No tienes cuenta?
    <a href="/register" style="color:#1abc9c;">Regístrate aquí</a>
  </p>
</section>

<%- include('parcial/footer', { siteName: siteName }) %>


