<%- include('parcial/header', { siteName: siteName }) %>

<section class="container" style="max-width:400px;margin:auto;">
  <h2>Iniciar sesión</h2>
  <form action="/api/login" method="POST" style="display:flex;flex-direction:column;gap:15px;">
    <label for="email">Email</label>
    <input type="email" name="email" id="email" required class="input" style="padding:8px;">

    <label for="password">Contraseña</label>
    <input type="password" name="password" id="password" required class="input" style="padding:8px;">

    <button type="submit" class="btn-primary" style="margin-top:10px;">Entrar</button>
  </form>
  <p style="margin-top:10px;">¿No tienes cuenta? <a href="/register">Regístrate aquí</a></p>
</section>

<%- include('parcial/footer', { siteName: siteName }) %>
